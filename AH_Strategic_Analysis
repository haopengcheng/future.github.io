    <script>
        const generateBtn = document.getElementById('generate-btn');
        const companyInput = document.getElementById('company-input');
        const aiResultDiv = document.getElementById('ai-result');
        const md = window.markdownit();

        // Modal elements
        const messageModal = document.getElementById('message-modal');
        const modalText = document.getElementById('modal-text');
        const modalCloseBtn = document.getElementById('modal-close-btn');

        // Function to show modal
        function showModal(message) {
            modalText.textContent = message;
            messageModal.classList.remove('hidden');
        }

        // Close modal
        modalCloseBtn.addEventListener('click', () => {
            messageModal.classList.add('hidden');
        });


        generateBtn.addEventListener('click', async () => {
            const companyName = companyInput.value.trim();

            if (!companyName) {
                showModal('请输入公司名称或行业类型。');
                return;
            }

            aiResultDiv.innerHTML = '<div class="flex justify-center items-center h-full"><div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-400"></div><p class="ml-4">AI分析师正在撰写报告...</p></div>';
            generateBtn.disabled = true;
            generateBtn.classList.add('opacity-50', 'cursor-not-allowed');

            try {
                // Construct the prompt for the Gemini API
                const prompt = `你是一位顶级的投资策略分析师。请基于普遍的“A+H”两地上市的背景信息，为“${companyName}”这家公司撰写一份关于其进行“A+H”两地上市的战略利弊分析报告。
                
                分析需要体现专业投资视角，格式清晰，内容应包括：
                1.  **核心优势与机遇**：结合其可能的行业特点（如科技、消费、制造等）分析在H股上市能带来的独特机遇。
                2.  **可能面临的挑战与风险**：分析两地上市可能带来的监管、估值差异、管理等方面的挑战。
                3.  **综合战略建议**：给出一个明确的、总结性的投资策略建议。
                
                请使用专业、简洁、有条理的商业报告格式输出，使用Markdown语法。`;

                let chatHistory = [];
                chatHistory.push({ role: "user", parts: [{ text: prompt }] });
                const payload = { contents: chatHistory };
                // The API key is an empty string and will be handled by the execution environment.
                const apiKey = "";
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;
                
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                    throw new Error(`API 请求失败，状态码: ${response.status}`);
                }

                const result = await response.json();

                if (result.candidates && result.candidates.length > 0 && result.candidates[0].content && result.candidates[0].content.parts && result.candidates[0].content.parts.length > 0) {
                    const generatedText = result.candidates[0].content.parts[0].text;
                    aiResultDiv.innerHTML = md.render(generatedText);
                } else {
                    console.error("Unexpected API response structure:", result);
                    // Check for blocked content message
                    if (result.candidates && result.candidates[0] && result.candidates[0].finishReason === 'SAFETY') {
                         throw new Error('内容生成因安全原因被阻止。请尝试不同的输入。');
                    }
                    throw new Error('未能从AI获取有效的分析报告，请稍后再试。');
                }

            } catch (error) {
                console.error('Error generating analysis:', error);
                aiResultDiv.innerHTML = `<p class="text-red-400">生成分析失败: ${error.message}</p>`;
                showModal(`生成分析时出错: ${error.message}`);
            } finally {
                generateBtn.disabled = false;
                generateBtn.classList.remove('opacity-50', 'cursor-not-allowed');
            }
        });
    </script>

</body>
</html>
